{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "definitions": {
    "sha2": {
      "type": "string",
      "minLength": 44,
      "maxLength": 44,
      "pattern": "^[A-Za-z0-9/+=]+$"
    },
    "blake2": {
      "type": "string",
      "minLength": 44,
      "maxLength": 44,
      "pattern": "^[A-Za-z0-9/+=]+$"
    },
    "size": {
      "type": "integer",
      "minimum": 0
    }
  },

  "type": "object",
  "required": ["size"],
  "properties": {
    "sha2": { "$ref": "#/definitions/sha2" },
    "blake2": { "$ref": "#/definitions/blake2" },
    "size": { "$ref": "#/definitions/size" }
  },
  "additionalProperties": false
}

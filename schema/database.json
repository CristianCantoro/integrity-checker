{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "definitions": {
    "$comment": "field types",
    "sha2": {
      "type": "string",
      "minLength": 44,
      "maxLength": 44,
      "pattern": "^[A-Za-z0-9/+=]+$"
    },
    "blake2": {
      "type": "string",
      "minLength": 44,
      "maxLength": 44,
      "pattern": "^[A-Za-z0-9/+=]+$"
    },
    "size": {
      "type": "integer",
      "minimum": 0
    },
    "nul": {
      "type": "boolean"
    },
    "nonascii": {
      "type": "boolean"
    },

    "$comment": "object types",
    "directory": {
      "type": "object",
      "required": ["Directory"],
      "properties": {
        "Directory": {
          "type": "object",
          "additionalProperties": {
            "anyOf": [
              { "$ref": "#/definitions/directory" },
              { "$ref": "#/definitions/file" }
            ]
          }
        }
      }
    },
    "file": {
      "type": "object",
      "required": ["File"],
      "properties": {
        "File": {
          "type": "object",
          "required": ["size"],
          "properties": {
            "sha2": { "$ref": "#/definitions/sha2" },
            "blake2": { "$ref": "#/definitions/blake2" },
            "size": { "$ref": "#/definitions/size" },
            "nul": { "$ref": "#/definitions/nul" },
            "nonascii": { "$ref": "#/definitions/nonascii" }
          }
        }
      }
    }
  },

  "$ref": "#/definitions/directory"
}
